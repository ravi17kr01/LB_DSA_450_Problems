def compare_func(arr):
    a = b = arr[0]

    for i in range(1,len(arr)):
        if arr[i] < a:
            a = arr[i]
        elif arr[i] > b:
            b = arr[i]
    
    return a,b


arr = [1,2,4,3,0,9,8]
result = compare_func(arr)
print(result)
     
